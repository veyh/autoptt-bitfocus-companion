{
	"private": true,
	"name": "autoptt",
	"version": "1.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build && companion-module-build",
		"build": "rimraf dist && run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/veyh/autoptt-bitfocus-companion.git"
	},
	"engines": {
		"node": "^22.20",
		"yarn": "^4"
	},
	"dependencies": {
		"@bufbuild/protobuf": "^2.2.3",
		"@companion-module/base": "~1.12.1",
		"varint": "^6.0.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.4.2",
		"@types/node": "^22.18.13",
		"@types/varint": "^6.0.3",
		"eslint": "^9.39.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"prettier": "^3.6.2",
		"rimraf": "^6.1.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.46.2"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.10.3"
}
